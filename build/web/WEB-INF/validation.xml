<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <formset>
        <form name="FormBean">
            <field property="username" depends="required">
                <arg key="formBean.username"/>
            </field>
            <field property="password" depends="required">
                <arg key="formBean.password"/>
            </field>
        </form>
        
        <form name="DeviceBean">
            <field property="barcode" depends="required">
                <arg key="deviceBean.barcode"/>
            </field>
            <field property="latitude" depends="required">
                <arg key="deviceBean.latitude"/>
            </field>
            <field property="longitude" depends="required">
                <arg key="deviceBean.longitude"/>
            </field>
        </form>
    </formset>

</form-validation>
